extends ../../layouts/default.pug

block content
  .container.my-4
    h2 Danh Sách Sản Phẩm
    .card.mb-3
      .card-header Bộ lọc và Tìm kiếm
      .card-body
        .row
          .col-6
            each item in buttonStatus
              button(
                class=`btn btn-sm ml-1 btn-outline-success ${item.highlight}`
                button-status=item.class
                ) #{item.btnst}
          .col-6
            form(id="form-search")
              .input-group
                input(
                  type="text",
                  placeholder="Nhập từ khóa",
                  name="keyword",
                  class="form-control",
                  id ="inputSearch"
                )
                .input-group-append
                  button(
                    class="btn btn-success",
                    type="submit",
                    id = "btnSearch"
                  ) Tìm
    table.table.table-bordered.table-hover
      thead
        tr
          th Stt
          th Hình ảnh
          th Tiêu đề
          th Giá
          th Trạng thái
          th Hành động
      tbody
        each item,index in products
          tr
            td #{index+1}
            td
              img(
                src=item.thumbnail,
                alt="Sản phẩm #{index+1}",
                width="100px",
                height="auto"
              )
            td #{item.title}
            td #{item.price}$
            td
              if item.status === 'active'
                a(href="#", class="badge badge-success") Hoạt động
              else if item.status === 'inactive'
                a(href="#", class="badge badge-secondary") Dừng hoạt động
              else
                a(href="#", class="badge badge-warning") Không rõ
            td
              button(class="btn btn-warning btn-sm") Sửa
              button(class="btn btn-danger btn-sm ml-1") Xóa
