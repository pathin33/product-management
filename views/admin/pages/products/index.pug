extends ../../layouts/default.pug

block content
  .container.my-4
    h2 Danh Sách Sản Phẩm
    table.table.table-bordered.table-hover
      thead
        tr
          th Stt
          th Hình ảnh
          th Tiêu đề
          th Giá
          th Trạng thái
          th Hành động

        each item,index in products
            tbody
                tr
                td #{index+1}
                td
                    img(
                    src=item.thumbnail
                    alt="Sản phẩm #{index+1}"
                    width="100px"
                    height="auto"
                    )
                td #{item.title}
                td #{item.price}$
                td
                    if item.status === 'active'
                        a(href="#", class="badge badge-success") Hoạt động
                    else if item.status === 'inactive'
                        a(href="#", class="badge.badge-secondary") Không hoạt động
                    else
                        a(href="#", class="badge.badge-warning") Không rõ
                td
                    button(class="btn btn-warning btn-sm") Sửa
                    button(class="btn btn-danger btn-sm ml-1") Xóa
